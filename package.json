{
  "name": "splashscreen",
  "version": "1.0.0",
  "description": "Discrete New York Temporary Splash Screen",
  "main": "index.js",
  "repository": "https://github.com/discretenewyork/splashscreen",
  "author": "Elias Martinez Cohen <eliasmartinezcohen@gmail.com>",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "build": "yarn clean && NODE_ENV=production node ./script/build-prod",
    "clean": "rm -rf dist/",
    "deploy": "yarn build && aws s3 sync ./dist s3://discretenewyork.com",
    "dev": "steal-tools --watch"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.2",
    "eslint": "^4.10.0",
    "eslint-config-eliath": "2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-react": "^7.4.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "steal": "^1.5.15",
    "steal-jsx": "^0.0.2",
    "steal-tools": "^1.9.1",
    "styled-components": "^2.2.3"
  },
  "steal": {
    "transpiler": "babel",
    "babelOptions": {
      "blacklist": []
    },
    "plugins": [
      "steal-jsx"
    ]
  },
  "eslintConfig": {
    "extends": "eliath",
    "env": {
      "browser": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "react",
      "import"
    ]
  }
}
